@using VendorsAndOrders.Models;

@{
	Layout = "_Layout";
}

<h1 id="title">Vendors</h1>

@if(Model.Count == 0)
{
	<p>You have no vendors. Would you like to add one?</p>
}

<ul>
	@foreach (Vendor vendor in Model)
	{
		<lI><a href="/vendors/@vendor.Id">@vendor.Name</a></lI>
	}
</ul>

<a href="/vendors/new">Add a new vendor</a>
<br>
<a href="/">Return to homepage</a>
<br><br>
@if(Model.Count > 0)
{
	<form action="/vendors/delete" method="post">
		<button id="delete" type="submit" name="button">Clear all vendors</button>
	</form>
}